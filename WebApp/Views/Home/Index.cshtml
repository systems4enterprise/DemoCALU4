@model DataModelCodeFirst.ViewModels.AuthorsDataView

<div class="col-md-6">

    <h3>Authors</h3>
    <table class="table table-striped table-condensed table-hover is-datatable display" id="citiestable" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model.AuthorsData)
            {
                <tr>
                    <td>@Html.DisplayFor(x => author.Id)</td>
                    <td>@Html.DisplayFor(x => author.Name)</td>

                </tr>
            }
        </tbody>
    </table>
</div>